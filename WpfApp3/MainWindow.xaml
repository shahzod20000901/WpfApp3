<Window x:Class="WpfApp3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <Label x:Name="Label_Title" Width="400" Height="50"  
               Content="Введите своё имя: "
               FontSize="30"
               Foreground="Blue"    
        />
        
        <TextBox x:Name="Input_Name" 
                 Foreground="Blue"
                 FontSize="25"
        /> 
        
        <Button x:Name="Save" Width="200" Height="80" Click="Save_OnClick"
                Content = "Сохранить "
                FontSize="30"
                Foreground="Brown"
        />
        
        <Label x:Name="Label_output" Width="1000" Height="50"  
               
               FontSize="30"
               Foreground="Blue"    
        />
        
        <Button x:Name="Reset" Width="200" Height="80" Click="Reset_OnClick_OnClick"
                Content = "Сбросить"
                FontSize="30"
                Foreground="Brown"
        />
        
        
        
        
            
    </StackPanel>
</Window>
